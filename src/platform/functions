}

# gen_docs: regenerate docs for misfit_toys
gen_docs() {
    local prev=$(pwd)
    cdi docs
    rm -rf source
    cdi
    sphinx-apidoc -o docs/source -e -M misfit_toys
    cd docs/source
    # python clean_nest.py
    cdi docs
    python clean_nest.py
    make html
    cd $prev
}
