# cmp_tensor: compare tensors
cmp_tensor() {
    DIR1=${1:-"/home/tyler/protect"}
    DIR2=${2:-"conda/BENCHMARK/multiscale/data"}
    OUT_DIR=${3:-"$ISL/debug/dw_validate/"}
    MAKE_FIGS=${4:-""}
    cdi debug
    python debug.py $DIR1 $DIR2 $OUT_DIR -f -i vp_record obs_data
    cd $OUT_DIR
    # pfs . "*.txt" "*"
}

