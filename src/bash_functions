#toggle RICH_LOG
trich(){
    if [ -z $RICH_LOG ]; then
        export RICH_LOG='/tmp/rich.ans'
    else
        unset RICH_LOG
    fi
    echo "RICH_LOG=$RICH_LOG"
}

# strip all ansi codes
sansi(){
    sed $@ 's/\x1b\[[0-9;]*[mGKFH]//g'
}

# replace all ansi codes with a marker
ransi(){
    local replace=${1:-"ANSI_MARKER"}
    sed "s/\x1b\[[0-9;]*[mGKFH]/$replace/g"
}

# strip non-alpha numeric symbols
salpha(){
    sed "$@" 's/[^0-9a-zA-Z .+-]//g'
}

# pip version
pip_ver(){
    pip show $1 2> /dev/null | grep "Version"
}

