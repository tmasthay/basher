phelp() {
    python $BASHER/src/py_scripts/phelp.py $@
}

# gce: "git commit empty"
gce(){
    git commit --allow-empty $@
}

# rcache: remove __pycache__ recursively
rcache(){
    find . -type d -name "__pycache__" -print -exec rm -rf {} \; 2> /dev/null
}

# pcr: "pre-commit run"
pcr(){
    pre-commit clean
    pre-commit install
}

# gds: "git difftool staged"
