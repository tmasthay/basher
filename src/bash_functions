tyc(){
    CURR_PATH=${2:-.}
    REGEX=${1:-"AnExpressionThatWillNeverMatchAnythingHOORAH.NOPE"}

    if [[ "$REGEX" == ".*" || "$REGEX" == "*" ]]; then
        echo "Cannot clean everything"
        return
    fi

    RESULTS=$(find . -type f -name "$REGEX")
    echo $RESULTS
    find . -type f -name "$REGEX" -delete
}

