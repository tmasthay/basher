gmu(){
    TARGET=${1:-"main"}
    CURR=$(git rev-parse --abbrev-ref HEAD)
    git pull
    git checkout $TARGET
    git pull
    git merge $CURR
    git push
    git checkout $CURR
}

gmd(){
    SRC=${1:-"main"}
    CURR=$(git rev-parse --abbrev-ref HEAD)
    git pull
    git checkout $SRC
    git pull
    git checkout $CURR
    git merge $SRC
}

