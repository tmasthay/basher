# gsrt: "git super root" -- go to the root of the repo, disregarding submodules
gsrt(){
    local super=$(git rev-parse --show-superproject-working-tree)
    if [ -z $super ]; then
        echo "$(git rev-parse --show-toplevel)"
    else
        echo "$super"
    fi
}

gsmu(){
    git submodule update --recursive --remote
}

gsync(){
    local prev=$(pwd)
    cd $(gsrt)
    cd GitHookEm
    ./sync.sh
    cd $prev
}


